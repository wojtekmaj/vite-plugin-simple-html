{
  "name": "vite-plugin-simple-html",
  "version": "0.1.2",
  "description": "Vite plugin for HTML processing and minification",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist",
    "format": "prettier --check . --cache",
    "lint": "eslint .",
    "postinstall": "husky",
    "prepack": "yarn clean && yarn build",
    "test": "yarn lint && yarn tsc && yarn format && yarn unit",
    "tsc": "tsc",
    "unit": "vitest"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "plugin",
    "html"
  ],
  "author": {
    "name": "Wojciech Maj",
    "email": "kontakt@wojtekmaj.pl"
  },
  "license": "MIT",
  "dependencies": {
    "html-minifier-terser": "^7.0.0"
  },
  "devDependencies": {
    "@types/html-minifier-terser": "^7.0.0",
    "@wojtekmaj/async-array-utils": "^1.8.1",
    "eslint": "^8.56.0",
    "eslint-config-wojtekmaj": "^1.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.0",
    "rimraf": "^3.0.0",
    "typescript": "^5.4.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.2"
  },
  "peerDependencies": {
    "@types/html-minifier-terser": "^7.0.0",
    "vite": "^2.3.0 || ^3.0.0 || ^4.0.0 || ^5.0.0"
  },
  "peerDependenciesMeta": {
    "@types/html-minifier-terser": {
      "optional": true
    }
  },
  "resolutions": {
    "eslint-plugin-import": "npm:eslint-plugin-i@^2.28.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wojtekmaj/vite-plugin-simple-html.git"
  },
  "funding": "https://github.com/wojtekmaj/vite-plugin-simple-html?sponsor=1",
  "packageManager": "yarn@4.1.1"
}
